{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
	{
		"label": "build",
		"type": "shell",
		"command": "tput reset; ./build.sh",
		"problemMatcher": { "base": "$gcc", "fileLocation": ["absolute"]},
		"group": {"kind": "build","isDefault": true }
	},
	{
		"label": "rebuild",
		"type": "shell",
		"command": "tput reset; ./build.sh asan 1 1 0",
		"problemMatcher": { "base": "$gcc", "fileLocation": ["absolute"],
			"pattern": {"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$","file": 1,"line": 2,"column": 3,"severity": 4,"message": 5}
		}
	},
	{
		"label": "compile",
		"type": "shell",
		"command": "tput reset; ccache",
		"args": ["clang++", "-O0","-g","-I${env:REPO_DIR}/boostorg/boost_1_74_0","-I../../Framework/source/log/server/proto","-I${env:REPO_DIR}/tws-api/source/cppclient/client","-I${env:REPO_DIR}/spdlog/include/","-I${env:REPO_DIR}/json/include","-I${env:REPO_DIR}/matio/src", "-Wall","-Wno-unknown-pragmas","-fsanitize=address","-fno-omit-frame-pointer","-pthread","-std=c++20","-include","${workspaceFolder}/.obj/asan/CMakeFiles/Tests.MarketLibrary.dir/CMakeFiles/Tests.MarketLibrary.dir/cmake_pch.hxx","-o","${workspaceFolder}/.obj/asan/CMakeFiles/Tests.MarketLibrary.dir/${fileBasename}.o","-c", "${file}"],
		"problemMatcher": ["$gcc"],
		"dependsOrder": "sequence",
		"dependsOn": ["echo"]
	}]
}